@{
    ViewBag.Title = "Enable Two-Factor Authentication";
}

<div class="card p-4" style="max-width: 600px; margin: 50px auto;">
    <h2 class="card-title text-center">Enable Two-Factor Authentication</h2>
    <p class="text-center">Scan the QR code below with your authenticator app (e.g., Microsoft Authenticator) and enter the 6-digit code to verify.</p>
    <div class="text-center mt-3">
        @if (!string.IsNullOrEmpty(ViewBag.QRCodeImage))
        {
            <img src="@ViewBag.QRCodeImage" alt="QR Code" class="img-fluid" style="width: 400px; height: 400px;" />
        }
        else
        {
            <p class="text-danger">QR Code generation failed.</p>
        }
    </div>
    <form method="post" asp-action="VerifyTwoFactorCode" class="mt-3">
        <div class="form-group">
            <label for="code">Enter 6-digit code:</label>
            <input type="text" name="code" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">Verify</button>
    </form>
    <div class="mt-3">
        <h4>Recovery Codes:</h4>
        @if (ViewBag.RecoveryCodes != null)
        {
            <ul class="list-group">
                @foreach (var code in ViewBag.RecoveryCodes)
                {
                    <li class="list-group-item">@code</li>
                }
            </ul>
            <p class="mt-2">Save these codes in a safe place. You can use them to recover your account if you lose access to your authenticator app.</p>
        }
    </div>
</div>