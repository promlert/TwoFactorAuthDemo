@{
    ViewBag.Title = "Verify Two-Factor Authentication";
}

<div class="card p-4" style="max-width: 400px; margin: 0 auto;">
    <h2 class="card-title text-center">Two-Factor Authentication</h2>
    <p class="text-center">Enter the 6-digit code from your authenticator app.</p>
    <form method="post" asp-action="VerifyTwoFactorCode" class="mt-3">
        <div class="form-group">
            <input type="text" name="code" class="form-control text-center" placeholder="123 456" style="font-size: 1.5rem; padding: 1rem;" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3" style="background-color: #6c757d; border-color: #6c757d;">Verify</button>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </form>
    <p class="text-center mt-2">
        <a asp-action="ResendCode" asp-controller="Account">Don't have a code? Resend code.</a>
    </p>
</div>